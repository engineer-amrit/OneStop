{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "cache": true,
      "dependsOn": ["^build", "^generate"],
      "inputs": ["$TURBO_DEFAULT$", "src/**"],
      "outputs": ["dist/**"],
      "env": [
        "HOST",
        "DOMAIN",
        "CLIENT_URL",
        "DB_URL",
        "JWT_SECRET",
        "CSRF_SECRET",
        "NODE_ENV",
        "TEST_KEY"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "clean": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build"],
      "persistent": true
    },
    "generate": {
      "outputs": ["dist/**"],
      "inputs": ["prisma/schema/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    }
  },
  "ui": "tui"
}
