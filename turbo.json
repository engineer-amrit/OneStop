{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^generate"],
      "inputs": ["$TURBO_DEFAULT$", "src/**"],
      "outputs": ["dist/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "clean": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": true,
      "dependsOn": ["^build"],
      "persistent": true
    },
    "generate": {
      "outputs": ["packages/database/src/client/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    }
  },
  "ui": "tui"
}
